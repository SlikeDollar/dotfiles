#!/bin/sh

# $1 is a url; $2 is a command
[ -z "$1" ] && exit
title="$(yt-dlp --print "%(title)s" "$1")"
notify-send "â³ Queuing $title..."
cmd="$2"
[ -z "$cmd" ] && cmd="yt-dlp --embed-metadata -ic"
idnum="$(tsp $cmd "$1")"
realname="$(echo "$title" | sed "s/%20/ /g")"
tsp -D "$idnum" notify-send "ğŸ‘ $realname done."
